cabal-version: 3.0
name:          advent-of-code
version:       2023
build-type:    Simple

common warnings
  ghc-options: -Wall

executable advent_of_code
  import:           warnings
  main-is:          Main.hs
  build-depends:
    , base
    , mtl
    , split
    , array
    , monad-memo

  hs-source-dirs:   src
  other-modules:
    Lib.TaskRunner
    Solutions.Day1

  default-language: Haskell2010
